{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "##/*": ["./src/*"],
      "#deep/*": ["./src/deep/*"]
    }
  },
  "include": ["src/**/*"]
}
