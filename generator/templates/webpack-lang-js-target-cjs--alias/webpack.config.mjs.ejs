import { resolve } from "path";

function resolveFromRoot(...args) {
  return resolve(process.cwd(), ...args);
}

const config = {
  mode: "production",
  entry: "./src/index.js",
  output: {
    path: resolveFromRoot("dist"),
    filename: "index.js",
  },
  resolve: {
    alias: {
      "##": resolveFromRoot("src"),
      "#deep": resolveFromRoot("src/deep"),
    },
  },
};

export default config;
