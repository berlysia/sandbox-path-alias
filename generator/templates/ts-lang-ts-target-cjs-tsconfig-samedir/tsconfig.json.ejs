{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "##/*": ["./src/*"],
      "#deep/*": ["./src/deep/*"]
    }
  },
  "include": ["src/**/*"]
}
